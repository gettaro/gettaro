generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  name            String
  isActive        Boolean  @default(true)
  status          String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime

  // Relations
  authProviders         AuthProvider[]
  organizationMembers   OrganizationMember[]
  memberTitles         MemberTitle[]
  teams                 TeamMember[]
  directReports         DirectReport[] @relation("DirectReports")
  manager               DirectReport[] @relation("Manager")
  pmAccounts            ProjectManagementAccount[]
  prComments            PRComment[]
}

model Organization {
  id                 String   @id @default(uuid())
  name               String   @unique
  slug               String   @unique
  createdAt          DateTime @default(now())
  updatedAt          DateTime

  // Relations
  organizationMembers OrganizationMember[]
  titles             Title[]
  teams              Team[]
  teamMembers        TeamMember[]
  directReports      DirectReport[]
  integrationConfigs IntegrationConfig[]
  sourceControlAccounts SourceControlAccount[]
  projectManagementAccounts ProjectManagementAccount[]
  memberTitles       MemberTitle[]
}

model OrganizationMember {
  id             String   @id @default(uuid())
  userId         String
  email          String
  username       String
  organizationId String
  isOwner        Boolean  @default(false)
  titleId        String?  // New field for direct title reference
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  title        Title?       @relation(fields: [titleId], references: [id], onDelete: SetNull) // New relation
  sourceControlAccounts SourceControlAccount[]

  @@unique([userId, organizationId])
}

model Title {
  id             String   @id @default(uuid())
  name           String
  organizationId String

  // Relations
  organization   Organization        @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  members        OrganizationMember[] // New relation to members

  @@unique([name, organizationId])
}

model AuthProvider {
  id         String   @id @default(uuid())
  userId     String
  provider   String
  providerId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerId])
}

model Team {
  id             String   @id @default(uuid())
  name           String
  description    String?
  organizationId String
  createdAt      DateTime @default(now())
  updatedAt      DateTime

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  members      TeamMember[]
}

model TeamMember {
  id             String   @id @default(uuid())
  userId         String
  teamId         String
  organizationId String
  createdAt      DateTime @default(now())
  updatedAt      DateTime

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  team         Team         @relation(fields: [teamId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, teamId, organizationId])
}

model DirectReport {
  id             String   @id @default(uuid())
  managerId      String
  reportId       String
  organizationId String
  depth          Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime

  manager       User         @relation("Manager", fields: [managerId], references: [id], onDelete: Cascade)
  report        User         @relation("DirectReports", fields: [reportId], references: [id], onDelete: Cascade)
  organization  Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([managerId, reportId, organizationId])
}

model IntegrationConfig {
  id             String   @id @default(uuid())
  organizationId String
  providerName   String
  providerType   String
  encryptedToken String
  metadata       Json?
  lastSyncedAt   DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, providerName])
}

model SourceControlAccount {
  id             String   @id @default(uuid())
  memberId       String?
  organizationId String?
  providerName   String
  providerId     String
  username       String
  metadata       Json?
  lastSyncedAt   DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime

  member         OrganizationMember? @relation(fields: [memberId], references: [id], onDelete: SetNull)
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  pullRequests   PullRequest[]
}

model PullRequest {
  id                     String   @id @default(uuid())
  sourceControlAccountId String
  providerId             String
  url                    String
  title                  String
  description            String?
  status                 String
  createdAt              DateTime
  mergedAt               DateTime?
  lastUpdatedAt          DateTime
  timeToFirstReview      Int?
  timeToMerge            Int?
  updatedAt              DateTime @default(now())
  comments               Int      @default(0)
  reviewComments         Int      @default(0)
  additions              Int      @default(0)
  deletions              Int      @default(0)
  changedFiles           Int      @default(0)
  metadata               Json?

  account    SourceControlAccount @relation(fields: [sourceControlAccountId], references: [id], onDelete: Cascade)
  comments   PRComment[]
}

model PRComment {
  id                     String   @id @default(uuid())
  prId                   String
  sourceControlAccountId String
  type                   String
  body                   String
  createdAt              DateTime
  updatedAt              DateTime @default(now())

  pullRequest        PullRequest        @relation(fields: [prId], references: [id], onDelete: Cascade)
  sourceControlAccount SourceControlAccount? @relation(fields: [sourceControlAccountId], references: [id], onDelete: SetNull)
}

model ProjectManagementAccount {
  id             String   @id @default(uuid())
  userId         String
  organizationId String?
  providerName   String
  providerId     String
  metadata       Json?
  lastSyncedAt   DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime

  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  tickets        PMTicket[]
}

model PMTicket {
  id                         String   @id @default(uuid())
  projectManagementAccountId String
  providerId                 String
  title                      String
  epic                       String?
  labels                     String[]
  status                     String
  storyPoints                Int?
  createdAt                  DateTime
  updatedAt                  DateTime @default(now())
  completedAt                DateTime?

  account ProjectManagementAccount @relation(fields: [projectManagementAccountId], references: [id], onDelete: Cascade)
}
