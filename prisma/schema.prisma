// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  name            String
  isActive        Boolean  @default(true)
  status          String?
  titleId         String?
  organizationId  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime

  // Relations
  title            Title?
  organization     Organization?
  authProviders    AuthProvider[]
  userOrganizations UserOrganization[]
  teams            TeamMember[]
  directReports    DirectReport[] @relation("DirectReports")
  manager          DirectReport[] @relation("Manager")
}

model Title {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime

  // Relations
  users User[]
}

model AuthProvider {
  id         String   @id @default(uuid())
  userId     String
  provider   String
  providerId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerId])
}

model Role {
  id          String   @id @default(uuid())
  name        String
  permissions Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime
}

model Team {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime

  // Relations
  members TeamMember[]
}

model TeamMember {
  id        String   @id @default(uuid())
  userId    String
  teamId    String
  createdAt DateTime @default(now())
  updatedAt DateTime

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([userId, teamId])
}

model DirectReport {
  id        String   @id @default(uuid())
  managerId String
  reportId  String
  depth     Int
  createdAt DateTime @default(now())
  updatedAt DateTime

  // Relations
  manager User @relation("Manager", fields: [managerId], references: [id], onDelete: Cascade)
  report  User @relation("DirectReports", fields: [reportId], references: [id], onDelete: Cascade)

  @@unique([managerId, reportId])
}

model Organization {
  id        String   @id @default(uuid())
  name      String   @unique
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime

  // Relations
  users              User[]
  userOrganizations  UserOrganization[]
  integrationConfigs IntegrationConfig[]
}

model UserOrganization {
  id             String   @id @default(uuid())
  userId         String
  organizationId String
  isOwner        Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime

  // Relations
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
}

model IntegrationConfig {
  id             String   @id @default(uuid())
  organizationId String
  providerName   String
  providerType   String
  encryptedToken String
  metadata       Json?
  lastSyncedAt   DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, providerName])
}

model SourceControlAccount {
  id             String   @id @default(uuid())
  userId         String
  organizationId String?
  providerName   String
  providerId     String
  username       String
  metadata       Json?
  lastSyncedAt   DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime

  // Relations
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  pullRequests PullRequest[]
}

model PullRequest {
  id                     String   @id @default(uuid())
  sourceControlAccountId String
  providerId             String
  url                    String
  title                  String
  status                 String
  createdAt              DateTime
  mergedAt               DateTime?
  lastUpdatedAt          DateTime
  timeToFirstReview      Int?
  timeToMerge            Int?
  updatedAt              DateTime @default(now())

  // Relations
  account    SourceControlAccount @relation(fields: [sourceControlAccountId], references: [id], onDelete: Cascade)
  comments   PRComment[]
  reviewers  PRReviewer[]
}

model PRComment {
  id        String   @id @default(uuid())
  prId      String
  authorId  String?
  body      String
  createdAt DateTime
  updatedAt DateTime @default(now())

  // Relations
  pullRequest PullRequest @relation(fields: [prId], references: [id], onDelete: Cascade)
}

model PRReviewer {
  id          String   @id @default(uuid())
  prId        String
  reviewerId  String
  reviewedAt  DateTime
  reviewState String
  createdAt   DateTime @default(now())
  updatedAt   DateTime

  // Relations
  pullRequest PullRequest @relation(fields: [prId], references: [id], onDelete: Cascade)
  reviewer    SourceControlAccount @relation(fields: [reviewerId], references: [id], onDelete: Cascade)
}

model ProjectManagementAccount {
  id             String   @id @default(uuid())
  userId         String
  organizationId String?
  providerName   String
  providerId     String
  metadata       Json?
  lastSyncedAt   DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime

  // Relations
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  tickets      PMTicket[]
}

model PMTicket {
  id                         String   @id @default(uuid())
  projectManagementAccountId String
  providerId                 String
  title                      String
  epic                       String?
  labels                     String[]
  status                     String
  storyPoints                Int?
  createdAt                  DateTime
  updatedAt                  DateTime @default(now())
  completedAt                DateTime?

  // Relations
  account ProjectManagementAccount @relation(fields: [projectManagementAccountId], references: [id], onDelete: Cascade)
} 